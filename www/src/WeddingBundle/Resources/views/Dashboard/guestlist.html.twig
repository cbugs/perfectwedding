{% set page = 'guestlist' %}
{% extends 'WeddingBundle:Dashboard:base.html.twig' %}

{% block dashboardContent %}


<div class="container text-center">
	<div class="row p-3">
        <div class="col-md-2">
            <div id='external-events'>
                <div id='external-events-listing'>
                    <h4>Draggable Events</h4>
                </div>
            </div>
            <br/>
            <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#addEventModal">Add Event</button>
        </div>
        <div class="col-md-10">
			<div id='calendar'></div>
		</div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addEventModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Add Event</h4>
        </div>
        <div class="modal-body">
            <form method="post" id="createEventForm" action="{{ path('create_event') }}">
                <input type="hidden" id="getEvents" value="{{ path('get_event') }}"/>
                <input type="hidden" id="deleteEvent" value="{{ path('delete_event') }}"/>
                <input type="hidden" id="saveEvent" value="{{ path('save_event') }}"/>
                <div class="form-group">
                    <label for="eventTitle">Email address</label>
                    <input type="text" class="form-control" id="eventTitle" placeholder="Enter Event Name">
                </div>
                <button type="button" id="addEventButton" data-dismiss="modal" class="btn btn-primary">Add</button>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
        </div>
        
    </div>
</div>











{% endblock %}