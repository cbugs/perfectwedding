{% set page = 'budget' %}
{% extends 'WeddingBundle:Dashboard:base.html.twig' %}

{% block dashboardContent %}
<div id="dash-wrapper">
  <button type="button" id="btn-add-budget" class="btn btn-violet btn-md" data-toggle="modal" data-target="#myModal">+ Add Budget</button>
	<!--<button type="button" class="modalButton" data-toggle="modal" data-src="https://www.youtube.com/embed/h9y6oPka3us" data-width="500" data-height="281" data-target="#myModal" data-video-fullscreen="">+ Add Buget</button>-->
    <form action="{{ path('user_dashboard_budget_save') }}" id="budget-save-form"/>
        <input type="hidden" id="table-ajax-path" value="{{ path('user_dashboard_budget_index') }}" />
        <table id="budget-table" class="display" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Budget Category</th>
                    <th>Estimated Cost</th>
                    <th>Actual</th>
                    <th>Paid</th>
                    <th>Due</th>
                    <th></th>
                    <th></th>
                </tr>
                <tr>
                    <th>Total</th>
                    <th><div>MUR</div><div id="b1col">0</div></th>
                    <th><div>MUR</div><div id="b2col">0</div></th>
                    <th><div>MUR</div><div id="b3col">0</div></th>
                    <th><div>MUR</div><div id="b4col">0</div></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </form>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Modal Header</h4>
        </div>
        <div class="modal-body">
            <form class="form-horizontal" action="{{ path('user_dashboard_budget_add') }}" id="budget-new-form">
                <div class="form-group">
                    <label class="control-label col-sm-2" for="name">Name:</label>
                    <div class="col-sm-10">
                    <input type="name" class="form-control" id="new-budget-name" placeholder="">
                    </div>
                </div>
                <div class="form-group"> 
                    <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" id="add-row" class="btn btn-default" data-dismiss="modal">Add Budget Item</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
        </div>
    </div>
</div>

<!-- modal -->
	<div class="modal fade" id="myModal">
		<div class="modal-dialog">
		    <div class="modal-content">
				<div class="modal-body">
                    <div class="close-button">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                    </div>
                    <div class="embed-responsive embed-responsive-16by9">
                            <iframe class="embed-responsive-item" frameborder="0"></iframe>
                    </div>
				</div>
			</div>
		</div>
	</div>
<!-- /.modal -->
{% endblock %}