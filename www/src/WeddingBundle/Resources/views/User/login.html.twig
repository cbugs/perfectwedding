{% extends 'WeddingBundle:Regions:base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
{% if error is defined %}
    <div>{{ error }}</div>
{% endif %}


<div class="form-login">
      
      <ul class="tab-group-login">
        <li class="tab active"><a href="#signup">Sign Up</a></li>
        <li class="tab"><a href="#login">Log In</a></li>
      </ul>
      
      <div class="tab-content-login">
        <div id="signup">   
          <h1 class="h1-login">Sign Up for Free</h1>
          
          <form action="/" method="post">
            {{ form_start(form, { 'attr': {'class': 'register-form'} }) }}
                {{ form_widget(form.roles, { 'attr': {'class': 'text-center'} }) }}
                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first) }}
                {{ form_row(form.plainPassword.second) }}

                <button class="btn-primary" type="submit">Register!</button>
            {{ form_end(form) }}
          <div class="field-wrap-login">
            <label class="label-login">
              Email Address<span class="req">*</span>
            </label>
            <input class="input-login" type="email"required autocomplete="off"/>
          </div>

          <div class="field-wrap-login">
            <label class="label-login">
              Email Address<span class="req">*</span>
            </label>
            <input class="input-login" type="email"required autocomplete="off"/>
          </div>

          <div class="field-wrap-login">
            <label class="label-login">
              Email Address<span class="req">*</span>
            </label>
            <input class="input-login" type="email"required autocomplete="off"/>
          </div>
          
          <div class="field-wrap-login">
            <label class="label-login">
              Set A Password<span class="req">*</span>
            </label>
            <input class="input-login" type="password"required autocomplete="off"/>
          </div>
          
          <button type="submit" class="button-login button-block-login"/>Get Started</button>
          
          </form>

        </div>
        
        <div id="login">   
          <h1 class="h1-login">Welcome Back!</h1>
          
          <form action="{{ path('user_login') }}" name="login_form" method="post">
          
            <div class="field-wrap-login">
            <label class="label-login">
              Username<span class="req">*</span>
            </label>
            <input class="input-login" type="text" id="username" name="username" required autocomplete="off"/>
          </div>
          
          <div class="field-wrap-login">
            <label class="label-login">
              Password<span class="req">*</span>
            </label>
            <input class="input-login" type="password" required id="password" name="password" autocomplete="off"/>
          </div>
          
          <p class="forgot-login"><a href="#">Forgot Password?</a></p>
          
          <button class="button-login button-block-login"/>Log In</button>
          
          </form>

        </div>
        
      </div><!-- tab-content -->
      
</div> <!-- /form -->
{% endblock %}