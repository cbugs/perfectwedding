{% extends 'WeddingBundle:Regions:base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<div class="row supplier-admin">
<div class="col-md-3" id="sidebar">
 <button id="btn-add-product" class="btn btn-primary">+ Add Product</button>
 <table id="supplier-products-list" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Product</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Tiger Nixon</td>
                <td><button id="1" class="btn btn-edit"><span class="fa fa-edit"></span>edit</button></td>
            </tr>
            <tr>
                <td>Garrett Winters</td>
                <td><button id="2" class="btn btn-edit"><span class="fa fa-edit"></span>edit</button></td>
            </tr>
            </table>
        </div>

<div class="col-md-9" id="personal-sidebar">
<div class="container">
    <h3>Account Details - Supplier</h3>
    <hr/>



<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" href="#profile" role="tab" data-toggle="tab">profile</a>
  </li>

</ul>
{{ form_start(form, { 'attr': {'class': 'form-horizontal', 'id': 'profile-form'} }) }}
<!-- Tab panes -->
<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="profile">
  
  
  

    <div class="row">
        <div class="col-md-6 col-sm-12 bg-white text-center">
            
                <h4>Profile Picture</h4>
                <hr/>
                <div class="img-div text-center">
                    <img src="http://placekitten.com/g/400/200" />
                </div>
                <h4>Personal Information</h4>
                <hr/>
                <div class="form-inline">
                    <label for="first_name" class="col-sm-3">Profile Name</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.name, { 'attr': {'class': 'profile-input form-control'} }) }}
                    </div>
                </div>
                <div class="form-inline">
                    <label for="last_name"  class="col-sm-3">Email</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.email, { 'attr': {'class': 'profile-input form-control'} }) }}
                    </div>
                </div>
                <div class="form-inline">
                    <label for="last_name"  class="col-sm-3">Phone</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.phone, { 'attr': {'class': 'profile-input form-control'} }) }}
                    </div>
                </div>
                
           
        </div>
        <div class="col-md-6 col-sm-12 bg-white text-center">
            <form id="password-form" class="form-horizontal">
                <h4>Change Password</h4>
                <hr/>
                <div class="form-inline">
                    <label for="last_name"  class="col-sm-3">Old Password</label>
                    <div class="col-sm-9">
                        <input type="text" class="profile-input form-control" id="last_name" name="last_name">
                    </div>
                </div>
                <div class="form-inline">
                    <label for="last_name"  class="col-sm-3">New Password</label>
                    <div class="col-sm-9">
                        <input type="text" class="profile-input form-control" id="last_name" name="last_name">
                    </div>
                </div>
                <div class="form-inline">
                    <label for="last_name"  class="col-sm-3">Confirm</label>
                    <div class="col-sm-9">
                        <input type="text" class="profile-input form-control" id="last_name" name="last_name">
                    </div>
                </div>

            </form>
        </div>
    </div>
  
  
  
  </div>
 
 {{ form_end(form) }}


{% endblock %}
